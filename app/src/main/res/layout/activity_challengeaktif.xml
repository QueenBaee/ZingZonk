<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9e7ff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="27dp">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/rere" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4ebe6"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Berikut adalah challenge yang telah anda kirimkan dan berstatus aktif klik details untuk lebih jelasnya\n\nBintang biru menandakan target menghendaki adanya komunikasi. Sebelum dia memutuskan untuk menjawab Challenge yang anda kirimkan. klik details untuk jelasnya.\n\nBintang Abu artinya belum ada respon dari target\nBintang Kuning artinya target telah membaca challenge\nBintang Merah artinya target bukanlah jodoh anda.\nBintang Hijau artinya target juga menyukaimu. SELAMAT"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:background="#f4ebe6">
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Text yang tidak bisa diubah"
            android:textSize="16sp" />
            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/yellow_star"
                android:contentDescription="Bintang" />
        <Button
            android:id="@+id/detailsButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="#f4ebe6"
        android:layout_below="@id/linearLayout1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Text yang tidak bisa diubah"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/star_icon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/grey_star"
            android:contentDescription="Bintang" />
        <Button
            android:id="@+id/detailsButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="#f4ebe6"
        android:layout_below="@id/linearLayout2">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Text yang tidak bisa diubah"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/star_icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/blue_star"
            android:contentDescription="Bintang" />
        <Button
            android:id="@+id/detailsButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="#f4ebe6"
        android:layout_below="@id/linearLayout3">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Text yang tidak bisa diubah"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/star_icon4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/green_star"
            android:contentDescription="Bintang" />
        <Button
            android:id="@+id/detailsButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="#f4ebe6"
        android:layout_below="@id/linearLayout4">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Text yang tidak bisa diubah"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/star_icon5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/red_star"
            android:contentDescription="Bintang" />
        <Button
            android:id="@+id/detailsButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:gravity="center"
        android:layout_below="@id/linearLayout3">
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <Button
            android:id="@+id/Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3b4959"
            android:text="Ke Menu Utama"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>