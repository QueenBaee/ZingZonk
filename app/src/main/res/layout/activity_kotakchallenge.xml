<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#c9e7ff"
    android:padding="16dp">
    <ImageView
        android:id ="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/rere" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Kotak Challenge"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/challengeAktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenge Aktif"
            android:background="#3b4959"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/challengeMasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenge Masuk"
            android:background="#3b4959"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/riwayatChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Challenge"
            android:background="#3b4959"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/chatRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Room"
            android:background="#3b4959"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ke Menu Utama"
            android:background="#3b4959"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>