<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#c9e7ff"
    android:padding="16dp">
    <ImageView
        android:id ="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/rere" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4ebe6"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Masukkan nama anda dan nama - nama kompetitor anda yang telah dikenal baik oleh target. Bila perlu tambahkan keterangan untuk memperjelas identitas yang anda kirimkan.\ncontoh : \nFarhan 12 Mipa 2\nDian 10 TKJ 3 Kacamata \nReza Belakang Rumah"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Masukkan nama anda"
            android:textSize="16dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukkan nama anda"
            android:inputType="text"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Masukkan nama Kompetitor anda : "
            android:textSize="12dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Kompetitor 1"
            android:inputType="text"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Kompetitor 2"
            android:inputType="text"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Kompetitor 3"
            android:inputType="text"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukkan nama Kompetitor anda atau biarkan kosong"
            android:inputType="text"
            android:textSize="12sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukkan nama Kompetitor anda atau biarkan kosong"
            android:inputType="text"
            android:textSize="12sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukkan nama Kompetitor anda atau biarkan kosong"
            android:inputType="text"
            android:textSize="12sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukkan nama Kompetitor anda atau biarkan kosong"
            android:inputType="text"
            android:textSize="12sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="#3b4959"
            android:text="Kembali"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/lanjut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="251dp"
            android:layout_marginBottom="16dp"
            android:background="#3b4959"
            android:text="Lanjut"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>